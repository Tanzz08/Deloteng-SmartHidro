<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.TransplantasiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.HomeFragment"
        android:background="@color/backhround"
        android:paddingBottom="?attr/actionBarSize">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIconTint="@color/white">

                <FrameLayout
                    android:id="@+id/frameAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start|center_vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/btn_back"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_arrow_back"
                        app:shapeAppearanceOverlay="@style/imageViewCircle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="36dp"
                        android:layout_marginEnd="34dp"
                        android:fontFamily="sans-serif"
                        android:text="Transplantasi"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </FrameLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:id="@+id/shadow_view"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/shadow"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/corner_radius_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shadow_view"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBahan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Persyaratan Pertumbuhan Bibit"
                    android:textColor="@color/color_label"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp" />


                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="1. Ukuran Daun"
                    app:layout_constraintTop_toBottomOf="@id/tvBahan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvHeader"
                    app:layout_constraintEnd_toEndOf="@id/tvHeader"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader"
                    android:text="Bibit harus memiliki 3-4 helai daun untuk memastikan kekuatan yang cukup sebelum dipindahkan ke sistem hidroponik"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvHeader2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="2. Kondisi Ideal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="316dp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvHeader2"
                    app:layout_constraintEnd_toEndOf="@id/tvHeader2"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader2"
                    android:text="Bibit perlu tumbuh di lingkungan dalam pencahayaan, suhu, dan kelembapan yang sesuai untuk mendorong perkembangan akar dan daun yang sehat"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvHeader3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:text="3. Media Awal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv2" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvHeader3"
                    app:layout_constraintEnd_toEndOf="@id/tvHeader3"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader3"
                    android:text="Bibit tumbuh di media persemaian seperti spons, tray, atau rockwool yang mendukung pertumbuhan awal tanpa menghambat akar"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvAlat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Pengecekan Bibit"
                    android:textColor="@color/color_label"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv3" />

                <TextView
                    android:id="@+id/tvHeader4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="1. Bebas Hama"
                    app:layout_constraintTop_toBottomOf="@id/tvAlat"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvHeader4"
                    app:layout_constraintEnd_toEndOf="@id/tvHeader4"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader4"
                    android:text="Bibit harus diperiksa secara teliti untuk memastikan tidak ada hama seperti serangga kecil yang dapat menganggu pertumbuhannya"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvHeader5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="2. Bebas Penyakit"
                    app:layout_constraintTop_toBottomOf="@id/tv4"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvHeader5"
                    app:layout_constraintEnd_toEndOf="@id/tvHeader5"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader5"
                    android:text="Tanda-tanda seperti bercak daun atau akar yang membusuk harus dihindari sebelum bibit dipindahkan ke media hidroponik"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvHeader6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:text="3. Kondisi Akar"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv5" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvHeader6"
                    app:layout_constraintEnd_toEndOf="@id/tvHeader6"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader6"
                    android:text="Akar bibit harus sehat, berwarna putih, dan tidak terjepit selama proses penyeleksian"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <ImageView
                    android:id="@+id/flanel"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/inspeksi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv6" />

                <TextView
                    android:id="@+id/tvProsesJudul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Cara Memindahkan Bibit"
                    android:textColor="@color/color_label"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/flanel" />

                <TextView
                    android:id="@+id/tvProsesHeader1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="1. Persiapan Alat"
                    app:layout_constraintTop_toBottomOf="@id/tvProsesJudul"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProsesText1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvProsesHeader1"
                    app:layout_constraintEnd_toEndOf="@id/tvProsesHeader1"
                    app:layout_constraintTop_toBottomOf="@id/tvProsesHeader1"
                    android:text="Siapkan netpot (dengan sumbu flanel) dan bak hidroponik. Pastikan air nutrisi memiliki kepekatan 600-1000 ppm, ukur dengan TDS meter."
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvProsesHeader2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="2. Pisahkan Bibit"
                    app:layout_constraintTop_toBottomOf="@id/tvProsesText1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProsesText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvProsesHeader2"
                    app:layout_constraintEnd_toEndOf="@id/tvProsesHeader2"
                    app:layout_constraintTop_toBottomOf="@id/tvProsesHeader2"
                    android:text="Potong dan pisahkan rockwool yang berisi bibit. Gunakan cutter agar rapi dan pilih bibit yang paling sehat."
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tvProsesHeader3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="3. Poin Kritis"
                    app:layout_constraintTop_toBottomOf="@id/tvProsesText2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProsesText3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tvProsesHeader3"
                    app:layout_constraintEnd_toEndOf="@id/tvProsesHeader3"
                    app:layout_constraintTop_toBottomOf="@id/tvProsesHeader3"
                    android:text="Masukkan bibit ke netpot. Pastikan rockwool menyentuh kain flanel, dan kain flanel menyentuh air nutrisi di bak. Ini wajib agar tanaman bisa 'minum'."
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color"/>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/transplantasi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvProsesText3" />

                <TextView
                    android:id="@+id/tvTutor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imageView9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Video Tutorial"
                    android:textColor="@color/color_label"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <androidx.media3.ui.PlayerView
                    android:id="@+id/frame_vid"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/black"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTutor"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>